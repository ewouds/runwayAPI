{
  "name": "runway-api",
  "version": "1.0.0",
  "description": "A comprehensive REST API for European airports with fuzzy search capabilities, runway data, and METAR weather information.",
  "main": "main.cjs",
  "scripts": {
    "start": "node main.cjs",
    "dev": "nodemon main.cjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:api": "node tests/comprehensive-test.cjs",
    "demo:db": "node airportDB/demo.cjs",
    "demo:web": "echo 'Demo available at: http://localhost:3002/demo' && start http://localhost:3002/demo",
    "convert:csv": "cd airportDB && python csv_to_sqlite.py",
    "cleanup": "npm prune && npm audit fix --omit=dev",
    "deps:check": "npm outdated || true",
    "deps:update": "npm update"
  },
  "dependencies": {
    "aewx-metar-parser": "^1.0.0",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.17.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "author": "",
  "license": "ISC"
}
